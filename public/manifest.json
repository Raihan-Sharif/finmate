  "shortcuts": [
    {
      "name": "Add Transaction",
      "short_name": "Add Transaction",
      "description": "Quickly add a new income or expense transaction",
      "url": "/dashboard/transactions/new",
      "icons": [
        {
          "src": "/shortcuts/add-transaction.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Budget",
      "short_name": "Budget",
      "description": "Check your budget progress and spending",
      "url": "/dashboard/budget",
      "icons": [
        {
          "src": "/shortcuts/budget.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Investments",
      "short_name": "Investments",
      "description": "Track your investment portfolio",
      "url": "/dashboard/investments",
      "icons": [
        {
          "src": "/shortcuts/investments.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Reports",
      "short_name": "Reports",
      "description": "View financial reports and analytics",
      "url": "/dashboard/reports",
      "icons": [
        {
          "src": "/shortcuts/reports.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/dashboard/transactions/new",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "description",
      "text": "notes",
      "url": "receipt_url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+finmate",
      "url": "/dashboard?action=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.finmate.app",
      "id": "com.finmate.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/finmate/id123456789",
      "id": "123456789"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "file_handlers": [
    {
      "action": "/dashboard/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "handle_links": "preferred"
}