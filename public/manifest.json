{
  "name": "FinMate - Personal Finance Manager",
  "short_name": "FinMate",
  "description": "Ultimate personal finance companion for managing expenses, investments, budgets, and achieving financial goals",
  "version": "1.0.0",
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "start_url": "/dashboard",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#3B82F6",
  "background_color": "#ffffff",
  "prefer_related_applications": false,
  "categories": ["finance", "business", "productivity"],
